@model IEnumerable<SD6503_DHl.Models.Transaction>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ToAccount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransactionAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentPeriod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FromAccountNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ToAccount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentPeriod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FromAccountNavigation.AccountNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TransactionNumber">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TransactionNumber">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TransactionNumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
